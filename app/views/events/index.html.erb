<div class="hero">
  <div class="hero-head">
    <p class="title has-text-centered">Trending Events</p>
  </div>
  <div class="hero-body">
    <div class="box">
      <% @events.each do |event| %>
        <nav class="level is-outlined">
          <div class="level-left has-text-centered">
            <div class="box avg_wait_time">
              <p class="heading">Avg. Wait</p>
              <p class="title"><%= event.total_avg_wait_time %></p>
            </div>
          </div>

          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Event</p>
              <p class="title"><%= event.name %></p>
            </div>
          </div>

          <div class="level-right has-text-centered">
            <div>
              <p class="heading">Attend</p>
              <p><button class="button is-primary is-outlined">Check In</button></p>
            </div>
          </div>
        </nav>
      <% end %>
    </div>
  </div>
  <div class="hero-foot">
    <p class="header has-text-centered">I don't know what to put here</p>
  </div>
</div>