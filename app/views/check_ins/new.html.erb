<div id="view_page_container" class="container">
   <div id="view_form_box" class="box">
      <p class="title">Check in to <%= @event.name.titleize  %></p>

      <!-- <h2>Neighborhood: <%= @event.neighborhood.name.titleize %></h2>
   <h2>Venue: <%= @event.venue.name.titleize %></h2>
   <h2>Start Time: <%= @event.simple_start_time %></h2> -->

      <%= form_for @check_in do |f| %>
      <div class="field">
         <div class="control has-icons-left">
            <div class="select is-primary">
               <!-- <%= f.label :rating, "Rating: " %> -->
               <%= f.collection_select :rating, @rating_array, :to_s, :to_s %>
            </div>
            <div class="icon is-small is-left"> 
               <i class="fas fa-star"></i>
               </div>
         </div>
      </div>
      <div class="field">
            <div class="control has-icons-left">
               <div class="select is-primary">
                  <!-- <%= f.label :rating, "Rating: " %> -->
                  <%= f.collection_select :wait_time, @wait_time_array, :to_s, :to_s  %>
                  <%= f.hidden_field :user_id, value: @user.id %>
                  <%= f.hidden_field :event_id, value: @event.id %>
                  <%= f.hidden_field :active, value: 1 %>
               </div>
               <div class="icon is-small is-left"> 
                  <i class="fas fa-user-clock"></i>
                  </div>
            </div>
         </div>
      <%= f.submit "Check In", class: "button level-item is-primary is-outlined" %>
      <% end %>
   </div>
</div>