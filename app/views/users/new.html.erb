<div id="view_page_container" class="container">
  <div id="view_form_box" class="box">
    <p class="title">New User Sign Up</p>
    <% if flash[:errors] %>
      <div class="notification is-warning">
          This error needs to be changed
      </div>
    <% end %>
    <%= form_for @user do |f| %>
      <div class="field">
        <%= f.label :first_name, {class: "label"} %>
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>

          <%= f.text_field :first_name, {placeholder: 'Joe', class: "input"} %>
          
        </div>
      </div>

      <div class="field">
        <%= f.label :last_name, {class: "label"} %>
        <div class="control has-icons-left has-icons-right">
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>

          <%= f.text_field :last_name, {placeholder: 'Smith', class: "input"} %>
          
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :phone_number, {class: "label"} %>
        <div class="control has-icons-left has-icons-right">
          <span class="icon is-small is-left">
            <i class="fas fa-phone"></i>
          </span>

          <%= f.text_field :phone_number, {placeholder: 'xxx-xxx-xxxx', class: "input"} %>

          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :email, {class: "label"} %>
        <div class="control has-icons-left has-icons-right">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>

          <%= f.email_field :email, {placeholder: 'example@example.com', class: "input"} %>

          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, {class: "label"} %>
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>

          <%= f.password_field :password, {placeholder: 'Password', class: "input"} %>

        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Re-Enter Password", {class: "label"} %>
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>

          <%= f.password_field :password_confirmation, {placeholder: 'Password', class: "input"} %>

        </div>
      </div>
      <%= f.submit "Create User", class: "button is-primary is-outlined" %>
    <% end %>
  </div>
</div>
